{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "default",
  "description": "Default permissions for Syntari AI IDE",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-set-title",
    "core:window:allow-maximize",
    "core:window:allow-minimize",
    "core:window:allow-close",
    "core:window:allow-start-dragging",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:allow-exists",
    "fs:allow-stat",
    "fs:allow-copy-file",
    "fs:allow-create",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-mkdir",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-read-text-file-lines",
    "fs:allow-watch",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "/**" },
        { "path": "$HOME/**" },
        { "path": "$APPDATA/**" },
        { "path": "$LOCALDATA/**" },
        { "path": "$CACHE/**" },
        { "path": "$CONFIG/**" },
        { "path": "$DATA/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$RUNTIME/**" },
        { "path": "$TEMPLATE/**" }
      ]
    }
  ]
}
