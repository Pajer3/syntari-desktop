{
  "name": "syntari-desktop",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "WEBKIT_DISABLE_COMPOSITING_MODE=1 tauri dev",
    "tauri:dev-debug": "WEBKIT_DISABLE_COMPOSITING_MODE=1 tauri dev --debug",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run type-check && npm run lint && npm run test --run"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "@tailwindcss/vite": "^4.1.8",
    "@tauri-apps/api": "^2.5.0",
    "@tauri-apps/plugin-dialog": "^2.2.2",
    "@tauri-apps/plugin-opener": "^2",
    "@types/react-window": "^1.8.8",
    "lucide-react": "^0.511.0",
    "material-icon-theme": "^5.23.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-window": "^1.8.11",
    "react-window-infinite-loader": "^1.0.10",
    "tailwindcss": "^4.1.8"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^22.15.30",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.2.3",
    "@vitest/ui": "^3.2.3",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^23.0.1",
    "prettier": "^3.1.1",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vitest": "^3.2.3"
  },
  "optionalDependencies": {
    "monaco-editor": "^0.52.2",
    "monaco-languageclient": "^8.8.2",
    "vscode-languageserver-protocol": "^3.17.5",
    "web-tree-sitter": "^0.24.4"
  },
  "languageServers": {
    "comment": "Language servers that can be optionally installed for enhanced IDE features",
    "typescript": "typescript-language-server",
    "rust": "rust-analyzer",
    "python": "pyright",
    "go": "gopls",
    "cpp": "clangd",
    "java": "jdtls",
    "swift": "sourcekit-lsp",
    "dart": "dart_language_server",
    "haskell": "haskell-language-server",
    "ocaml": "ocamllsp",
    "csharp": "omnisharp"
  }
}
